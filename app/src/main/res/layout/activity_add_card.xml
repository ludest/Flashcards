<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <TextView
        android:id="@+id/add_page_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add New Card"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/cancel_card_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp" />

    <ImageView
        android:id="@+id/save_card_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_save"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp" />

    <EditText
        android:id="@+id/enter_question"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/add_page_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Question Here" />

    <EditText
    android:id="@+id/enter_answer"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_below="@id/enter_question"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="20dp"
    android:hint="Enter Answer Here" />




</RelativeLayout>



